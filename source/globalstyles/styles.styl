// globalstyles styles

/*==========================================================
Color Theme
==========================================================*/
cd-foreground = black
cd-flash = purple
cd-background = white

cd-ghana-red = #CF0921
cd-ghana-yellow = #FCD20F
cd-ghana-green = #006B3D


/*==========================================================
Global Variables
==========================================================*/
// max-content-width = 900px
// mobile-side-padding = 15px

maxMobileWidth = 740px
desktopscreen = 'screen and (min-width: %s)' % maxMobileWidth
mobilescreen = 'screen and (max-width: %s)' % maxMobileWidth

// desktopscreen = 'screen and (min-width: %s)' %  minDesktopWidth

/*==========================================================
General Tag Styles
==========================================================*/
html
    scroll-behavior: smooth
body
    color white
    font-family: Arial, Helvetica, sans-serif
    font-size: 12pt
    width 100%
h1
    font-size: 29pt
h2
    font-size: 20pt
p
    font-size: 14pt

/*==========================================================
Basic Font for different Sections
==========================================================*/
header
    color white

main
    color black
    h6
        display none

    h1
    h2
        font-weight: bold
        color cd-ghana-green

    h1
        margin auto
        padding 100px 0 30px 0
        max-width 900px
    h2 
        margin auto
        padding 30px 0
        max-width 900px
    p
        margin auto
        padding 20px 0
        font-size: 14pt
        letter-spacing: 0.5pt
        line-height: 130%

    img
        display: block
        margin auto
        object-fit: cover
        max-height 600px
        width 100%
        border-radius 5px
        box-shadow: 0 0 5px alpha(#000, 0.2)
footer
    color white
    h1
    h2
        font-weight: bold
        color cd-ghana-yellow


#content
    padding 50px 30px 150px 30px
    max-width: 900px
    margin auto