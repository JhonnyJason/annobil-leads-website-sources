// herostyles styles
#hero-section
    height 100vh
    width 100%
    background-size: cover
    background-position: center
    position: relative
    box-sizing: border-box
    padding 30px 100px

    h1 
        position absolute
        top calc(50% - 100px)
        left 50%
        padding 30px
        transform translate(-50%,-50%)
        background-color alpha(#000, 0.1)
    a
        position absolute
        bottom 50px
        left 50%
        padding 20px
        transform translate(-50%,-50%)
        border solid white 2px
#post-hero
    position: relative
    height 200px
    width 100%
    background-color cd-ghana-yellow
    color black

    svg
        position absolute
        top 50%
        left 50%
        transform: translate(-50%, -50%)
        height 100px
        width 100px

