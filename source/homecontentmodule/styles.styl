#about-us-section
    img
        max-width 300px
        max-height 300px

#about-us-container
    display grid
    gap 30px
    grid-template-columns: 1fr

.container
    display grid
    gap 30px
    grid-template-columns: 1fr
    margin-bottom: 150px

a.blog-link
    display: block
    position relative
    aspect-ratio: 1
    // filter: sepia(0.5) saturate(2)

    h2
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        width 100%
        padding 30px
        background-color alpha(#000, 0.4)
        color #fff
        box-sizing: border-box

    img
        aspect-ratio: 1

a.blog-link:hover
    // filter: none
    filter: sepia(0.5) saturate(2)

a.page-link
    padding 15px
    background-color cd-ghana-yellow
    color black
    font-size 12pt
    font-weight: bold
    width 180px
    text-align: center
    border-radius: 10px
    box-shadow: 3px 3px 5px alpha(#000, 0.2)
    display: block
    margin 20px auto 50px auto


@media screen and (min-width: 400px)
    .container
        grid-template-columns: repeat( auto-fit, minmax(360px, 1fr) )
    #about-us-container
        grid-template-columns: auto auto
        
